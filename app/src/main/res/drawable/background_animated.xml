<!-- background_animation.xml -->
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado predeterminado -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Animación de cambio de color -->
    <item android:id="@android:id/background">
        <clip>
            <animation-list android:oneshot="false">
                <item android:duration="1000">
                    <shape android:shape="rectangle">
                        <solid android:color="#80FF0000" /> <!-- Color translúcido rojo -->
                    </shape>
                </item>
                <item android:duration="1000">
                    <shape android:shape="rectangle">
                        <solid android:color="#8000FF00" /> <!-- Color translúcido verde -->
                    </shape>
                </item>
                <item android:duration="1000">
                    <shape android:shape="rectangle">
                        <solid android:color="#800000FF" /> <!-- Color translúcido azul -->
                    </shape>
                </item>
            </animation-list>
        </clip>
    </item>
</animated-selector>