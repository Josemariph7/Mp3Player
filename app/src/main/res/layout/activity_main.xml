<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_animated"
    tools:context=".Mp3Player"
    tools:ignore="ExtraText"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="-8dp">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo" />

    <!-- Botones de control -->
    <!-- AsegÃºrate de posicionar correctamente los botones de control (Play, Pause, Stop, etc.) como prefieras -->

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="412dp"
        android:layout_height="288dp"
        android:layout_marginTop="116dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="409dp"
        android:layout_height="411dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="382dp"
        android:layout_height="18dp"
        android:layout_marginBottom="152dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/currentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="172dp"
        android:text="00:00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/totalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="172dp"
        android:text="00:00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="38dp"
        android:layout_height="39dp"
        android:layout_marginTop="624dp"
        android:background="#00FFFFFF"
        android:src="@drawable/play_solid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="38dp"
        android:layout_height="39dp"
        android:layout_marginTop="624dp"
        android:background="#00FFFFFF"
        android:src="@drawable/forward_step_solid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnPrevious"
        android:layout_width="38dp"
        android:layout_height="39dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="624dp"
        android:background="#00FFFFFF"
        android:src="@drawable/backward_step_solid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnPause"
        android:layout_width="38dp"
        android:layout_height="39dp"
        android:layout_marginTop="624dp"
        android:background="#00FFFFFF"
        android:src="@drawable/pause_solid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnStop"
        android:layout_width="38dp"
        android:layout_height="39dp"
        android:layout_marginTop="624dp"
        android:background="#00FFFFFF"
        android:src="@drawable/stop_solid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.369"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnRepeat"
        android:layout_width="38dp"
        android:layout_height="39dp"
        android:layout_marginTop="684dp"
        android:background="#00FFFFFF"
        android:src="@drawable/repeat_solid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.369"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/botonGrabar"
        android:layout_width="38dp"
        android:layout_height="39dp"
        android:layout_marginTop="684dp"
        android:background="#00FFFFFF"
        android:src="@drawable/microphone_solid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>